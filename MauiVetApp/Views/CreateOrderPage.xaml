<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiVetApp.Models"
             x:Class="MauiVetApp.Views.CreateOrderPage"
             Title="{Binding Pet.Name, StringFormat='{0} - lav faktura'}">
    <ContentPage.BindingContext>
        <local:CreateOrderPageModel/>
    </ContentPage.BindingContext>
    <StackLayout>
        <Label Text="{Binding Pet.Name, StringFormat='Navn: {0}'}"/>
        <Picker Title="Vælg faktura modtager" ItemsSource="{Binding Owners}" ItemDisplayBinding="{Binding FirstName, StringFormat='{0}'}" />
        <StackLayout Orientation="Horizontal">
            <Picker x:Name="Treatment_Picker" Title="Vælg Behandling" ItemsSource="{Binding Treatments}" ItemDisplayBinding="{Binding Name}"/>
            <Button Text="Tilføj Behandling" Clicked="AddTreatment_Clicked"></Button>
            <Label x:Name="ChoosenTreatmentLabel"></Label>
        </StackLayout>
    </StackLayout>
</ContentPage>
