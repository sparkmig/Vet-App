        <StackLayout>
            <Label Text="Welcome to .NET MAUI!"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Label Text="{Binding Pet.Name, StringFormat='Navn: {0}'}" />
            <Label Text="{Binding Pet.Birthdate, StringFormat='FÃ¸deselsdag: {0}'}"></Label>
            <Label Text="{Binding Pet.AnimalType, StringFormat='Dyr: {0}'}"></Label>
            <Button Text="Lav faktura" Clicked="Button_Clicked"/>
            <Button Text="Hent faktura" />
        </StackLayout>
    </ScrollView>
</ContentPage>
